<Window x:Class="EvoFightClub.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvoFightClub.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="424.104" Width="790.405">
    <Grid Margin="0,0,2,5">
        <TextBox x:Name="txtLog" Height="233" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Stretch" Width="auto">
            <TextBox.Text>
                <Binding Path="log" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
        </TextBox>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Right" Margin="0,248,10,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
